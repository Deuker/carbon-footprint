<h1 id="authtext">Create an account to become a clever traveler</h1>
{{!-- action defines where it will get sended to --}}
<form id="authform" action="/auth/signup" method="POST">
  <label for="email"></label/>
  <input id="email" type="text" name="email" placeholder="Email..."/>

  <label for="password"></label>
  {{! change type to "password" to make the entered password invisible}}
  <input id="password" type="password" name="password" placeholder="Password..."/>

  {{#if message}}
    <div class="error-message">{{ message }}</div>
  {{/if}}
  <br><br>

  <button type="submit">Get Started</button>

  <p id="authtext"class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login here</a>
  </p>

</form>
