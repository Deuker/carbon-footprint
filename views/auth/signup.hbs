<h1>This represents the signup page</h1>
{{!-- action defines where it will get sended to --}}
<form id="form" action="/auth/signup" method="POST">
  <label for="email">Email</label/>
  <input id="email" type="text" name="email" placeholder="enter your email adress here"/>

  <label for="password">Password</label>
  {{! change type to "password" to make the entered password invisible}}
  <input id="password" type="password" name="password" placeholder="create a password"/>

  {{#if message}}
    <div class="error-message">{{ message }}</div>
  {{/if}}
  <br><br>

  <button type="submit">Create Account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login here</a>
  </p>

</form>
